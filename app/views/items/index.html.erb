<% if 1 == 0 %>
<div id="welcome">
	<div id="welcomeNote">
		<h2>Welcome to Rackjam</h2> 
		<p>Quickly browse all the latest in music gear in the UK.</p>
	</div>
</div>
<% end %>

<div id="results" class="<%=controller.controller_name %> <%=@view%>">
	<% if params[:brand] %>
		<h3 class="slug">Brand: <%= params[:brand] %></h3>
	<% elsif params[:search] %>
		<h3 class="slug">Results for: "<%= params[:search] %>"</h3>	
	<% else %>
		<h3 class="slug">Rackjam Items of the last 10 days.</h3>	
	<% end %>
	<%= render 'view' %>
</div>

<div id="paginationWrap">
	<%= will_paginate @items %>
</div>
  