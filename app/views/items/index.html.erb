<% if current_page?('/') %>
<div id="welcome">
	<div id="welcomeNote">
		<h2>Welcome to Rackjam</h2> 
		<p>Quickly browse all the latest in music gear in the UK.</p>
	</div>
</div>
<% end %>

<div id="results" class="<%=controller.controller_name %> <%=@view%>">
	<% if params[:brand] %>
		<h3 class="slug">Brand: <%= params[:brand] %></h3>
	<% end %>
	
	<%= render 'view' %>
</div>

<div id="paginationWrap">
	<%= will_paginate @items %>
</div>
  