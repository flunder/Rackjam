<% if user_signed_in? %>
	<% @liked = current_user.likes.where(:item_id => item.id) %>
	<% if @liked.exists? %>	
		<%= link_to 'unlike', likes_path, :class => 'liked', :remote => true %>
	<% else %>
		<%= link_to 'like', new_like_path, :class => 'unliked', :remote => true %>
	<% end %>
<% else %>
	<%= link_to 'like this', new_user_session_path, :rel => "nofollow" %>
<% end %>