<% if user_signed_in? %>
	<% @liked = current_user.likes.where(:item_id => item.id) %>
	<% if @liked.exists? %>	
		<a href="" class="liked">&nbsp;</a>
	<% else %>
		<a href="" class="unliked">&nbsp;</a>
	<% end %>
<% else %>
	<%= link_to 'x', new_user_session_path %>
<% end %>

