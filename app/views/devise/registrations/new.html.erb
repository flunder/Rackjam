<div id="staticResults" class="<%=controller.controller_name %> form">
	<h3>Register</h3>
	<h4>Its gonna be a quick one</h4>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  	<%= devise_error_messages! %>

		<div class="row js">
	  		<%= f.label :email, 'Email address', :class => 'overlay_text' %>
	  		<%= f.email_field :email %>
			<span class="defaultValue">Email address</span>
		</div>

		<div class="row ">
		  <%= f.label :username %><br/>
		  <%= f.text_field :username %>			
		</div>	

		<div class="row ">
		  <%= f.label :password %><br/>
		  <%= f.password_field :password %>			
		</div>

		<div class="row ">
		  <%= f.label :password_confirmation %><br/>
		  <%= f.password_field :password_confirmation %>		
		</div>

		<div class="row func2">
	  		<%= f.submit "Register" %>
		</div>
		
	<% end %>

	<%= render :partial => "devise/shared/links" %>
</div>