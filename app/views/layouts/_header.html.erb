<h1><a href="/">Rackjam</a><span>v0.35</span></h1>

<div id="viewAs">
	<span>Layout View</span>
	
	<% if @view == 'grid' %>
		<%= link_to 'grid', params.merge(:view => 'grid'), :id => 'viewAsGrid', :class => 'selected'  %>
	<% else %>
		<%= link_to 'grid', params.merge(:view => 'grid'), :id => 'viewAsGrid'%>
	<% end %>
	
	<% if @view == 'list' %>
		<%= link_to 'list', params.merge(:view => 'list'), :id => 'viewAsList', :class => 'selected'  %>
	<% else %>
		<%= link_to 'list', params.merge(:view => 'list'), :id => 'viewAsList' %>
	<% end %>		
</div>	

<% @brands = Item.brand_counts.order('name ASC') %>
<% unless @brands.empty? %>
	<form action="/" id="brand_dropdown">
		<select name="brand" onchange='this.form.submit()'>
			<option value="all">Select Brand</option>
			<% @brands.each do |brand| %>
				<% if params[:brand] == brand.name.downcase %>
					<option value="<%= brand %>" selected="selected"><%= brand.name.capitalize %></option>
				<% else %>
					<option value="<%= brand %>"><%= brand.name.capitalize %></option>
				<% end %>
			<% end %>
		</select>
		<input type="text" size="30" name="search" id="search" class="smartInput">
	</form>
<% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>