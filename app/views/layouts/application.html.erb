<!DOCTYPE html>
<html>

<head>
  <title>Synth4</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'jquery-1.6.1.min.js', 'isotope/jquery.isotope.min.js' %>
  <%= csrf_meta_tag %>
</head>

<body>
	<div id="header">
		<h1><a href="/">Synth4</a></h1>
		<!--
			@xx = Item.brand_counts
			@xx.order('count DESC')
			
		-->
		<% @brands = Item.brand_counts.order('name ASC') %>
		<% unless @brands.empty? %>
		
			<form action="" id="brand_dropdown">
				<select>
					<% @brands.each do |brand| %>
						<option value="<%= brand %>"><%= brand.name.capitalize %></option>
					<% end %>
				</select>
			</form>
		<% end %>
		
	</div>
	
	<div id="main">	
    	<div id="results" class="<%=@controller.controller_name %>">
      		<%= yield  %>
    	</div>
	</div>	
</body>
</html>

