</head>

<body>
	
	<div id="header">
		<%= render "layouts/header.html" %>
	</div>
	

	<div id="main">	
    	<%= yield %>
	</div>	
	
	<div id="footer">
		<ul>
			<!-- ><li><%= link_to_unless_current 'About', about_path %></li> -->
			<li><%= link_to "Full Site", root_url(:mobile => 0), :class => "button", :rel => "external" %></li>
		</ul>
	</div>
	
	<%= render "layouts/tracking.html" %>
</body>
</html>

