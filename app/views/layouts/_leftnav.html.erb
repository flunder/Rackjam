	<li><%= link_to_if(params[:type] != 'synth', 'Synth', :type => "synth" ) %></li>			
	<li><%= link_to_if(params[:type] != 'machine', 'Machines', :type => "machine" ) %></li>		
	<li><%= link_to_if(params[:type] != 'mic', 'Mics', :type => "mic" ) %></li>		
	<li><%= link_to_if(params[:type] != 'mixer', 'Mixers', :type => "mixer" ) %></li>		
</ul>

