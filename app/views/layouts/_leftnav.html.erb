<% @cookie_value = cookies[:rackjamnotice] %>

<% if @cookie_value != 'closed' %>
	<div id="intro">
		<%= Twitter.user_timeline("rackjam").first.text %>
		<a href="#" id="closeIntro">x</a>
	</div>
<% end %>

<h3 id="dash">Dashboard</h3>

<ul id="dashList">
	<% if user_signed_in? %><li>ID: <%= current_user.id %></li><% end %>
	<li id="d_about"><%= link_to_unless_current 'About', about_path %></a></li>
	<% if user_signed_in? %><li><%= link_to_unless_current 'Account', edit_user_registration_path %></li><% end %>
    <% if user_signed_in? %><li id="dash_likes"><%= link_to_unless_current 'Likes', likes_path %></li><% end %>	
